extends layout

block content
  section#loginbox.content.box
    .head
        h2
          | Log in

    section#auth-failed.content.box
        h2
            | Incorrect username/password pair

    .content
        form#login-form
            .fieldContainer
                label(for='username') Username
                input(type='text', id='jid', name='jid', placeholder='you', tabindex='1', autofocus)
            .fieldContainer
                label(for='password') Password
                input(type='password', id='password', name='password', placeholder='•••••••••••••', tabindex='2')
            .fieldContainer.fieldContainerWSS
                label(for='wsURL') WebSocket or BOSH URL
                input(type='text', id='connURL', name='connURL', placeholder='wss://aweso.me:5281/xmpp-websocket', tabindex='3')
            .fieldContainer.checkbox(title='Do not remember password')
                input(type='checkbox', id='public-computer', tabindex='4')
                label(for='public-computer') Public computer

            button(type='submit', tabindex='5', class="primary") Go!

block scripts
    script(src="config.js")
    script(src="js/login.js")
    script.
        if ("#{config.server.wss}".length == 0) {
            document.getElementsByClassName('fieldContainerWSS').forEach(function (e) {
                e.style.display = 'block';
            });
        }
